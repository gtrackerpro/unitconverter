{
  "name": "unit-converter-server",
  "version": "1.0.0",
  "description": "Node.js backend for unit converter",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "cpp:build": "cd cpp && g++ -o unit_converter unit_converter.cpp",
    "python:test": "cd python && python3 unit_converter.py",
    "java:build": "cd java && ./build.sh",
    "java:compile": "cd java && mkdir -p build && javac -d build src/main/java/com/unitconverter/UnitConverterApp.java"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}